<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wather_icon_custom_index_imageView"
        android:src="@drawable/weather1"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:padding="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="[DATE]"
        android:id="@+id/date_custom_index_textView"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="[TIME]"
        android:id="@+id/time_custom_index_textView"
        android:layout_below="@+id/date_custom_index_textView"
        android:layout_alignStart="@+id/date_custom_index_textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Temp: 17C"
        android:id="@+id/temp_custom_index_textView"
        android:layout_below="@+id/wather_icon_custom_index_imageView"
        android:layout_alignStart="@+id/wather_icon_custom_index_imageView" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/temp_custom_index_textView"
        android:gravity="center_vertical|center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/glass_mic_icon"
            android:padding="12dp" />
    </LinearLayout>


    <include layout="@layout/voice_menu_layout" ></include>

</RelativeLayout>